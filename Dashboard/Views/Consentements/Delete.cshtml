@model DAL.Model.Consentement

@{
    ViewData["Title"] = "Delete";
}
<div class="card bg-danger text-white shadow">
    <div class="card-body">
        Attention
        <div class="text-white-50 small">Voulez-vous vraiment supprimer cet élément?</div>
    </div>
</div>

<div class="card shadow mb-auto">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Détails consentement</h6>
    </div>
    <div class="card-body">

        <div>
           
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Matricule)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Matricule)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nom)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nom)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tel)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tel)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mail)
                </dd>
            </dl>
        </div>
    </div>
    <div class="card-footer py-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.ID" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-list"></i>
            </span><span class="text">Liste des consentements</span>
        </a>
    </form>
   
       
       
    </div>
</div>